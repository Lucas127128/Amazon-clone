{
  "scripts": {
    "allow-certs": "export NODE_TLS_REJECT_UNAUTHORIZED=0",
    "test:data": "vitest tests/browser/data tests/normal/data",
    "test:api": "bun run allow-certs && vitest tests/normal/api",
    "test:normal": "bun run allow-certs && vitest tests/normal",
    "test:e2e": "bun run allow-certs && playwright test --trace on",
    "test": "NODE_TLS_REJECT_UNAUTHORIZED=0 vitest",
    "build": "vite build",
    "inspect": "node-modules-inspector",
    "build:backend": "bun build --compile --minify --sourcemap --bytecode --format='esm' ./src/api/index.ts ",
    "remove-build-cache": " find . -name '*.bun-build' -type f -delete ",
    "exec-api": "./api",
    "api": "bun run --parallel build:backend allow-certs && bun run --parallel exec-api remove-build-cache",
    "check": "tsgo --noEmit",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --fix --type-aware",
    "fmt": "oxfmt",
    "request:orders": "cat ./tests/cart.json | xh post --https :8080/api/orders"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/eden": "^1.4.8",
    "dompurify": "^3.3.1",
    "elysia": "^1.4.26",
    "elysia-local-https": "^1.0.2",
    "idb-keyval": "^6.2.2",
    "minisearch": "^7.2.0",
    "nanoid": "^5.1.6",
    "temporal-polyfill-lite": "^0.2.2",
    "ts-pattern": "^5.9.0",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/bun": "^1.3.9",
    "@types/k6": "^1.6.0",
    "@types/trusted-types": "^2.0.7",
    "@vitejs/devtools": "^0.0.0-alpha.32",
    "@vitest/browser-preview": "^4.0.18",
    "axios": "^1.13.5",
    "bun-types": "1.3.5",
    "happy-dom": "^20.7.0",
    "k6": "^0.0.0",
    "node-modules-inspector": "^1.3.2",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.12.2",
    "playwright": "^1.58.2",
    "sharp": "^0.34.5",
    "unplugin-turbo-console": "^2.3.0",
    "vite": "^8.0.0-beta.15",
    "vite-plugin-html-minifier": "^1.0.5",
    "vite-plugin-remove-console": "^2.2.0",
    "vitest": "^4.0.18"
  }
}
